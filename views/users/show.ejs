<!doctype html>
<html lang="en">
<head>
    <% include ../partials/shim %>
</head>
<body>
    <% include ../partials/header %>
    <h2>All Users</h2>
    
    <% if (expressFlash != undefined) { %>
    <%   if ( expressFlash.length > 0 ) { %>
      <p style="color:blue"><%= expressFlash %> </p>
    <%   } %>
    <% } %>

    <div class="container">
    <table class="table table-stripped">
      <thead><tr><th>First Name</th><th>Last Name</th><th>Email</th><th>Option</th></thead>
      <tbody>
      <% userList.forEach(function(user) { %>
         <tr>
             <th><%= user.first_name %></th>
             <th><%= user.last_name %></th>
             <th><%= user.user_email + ' ' + user.user_password %></th>
             <th><a href=/users/<%= user.user_email %>/edit>Edit</a>  <a href=/users/<%= user.user_email %>/delete>Delete</a></th>
         </tr>
      <% }) %>
      </tbody>
    </table>
    <a class='btn btn-sm btn-primary' href='/users/new'>New User</a>
    </div>
    <% include ../partials/footer %>
</body>
</html>
